{
  "name": "popcorn-native",
  "version": "0.12.0",
  "private": true,
  "scripts": {
    "prebuild": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build-and-install": "yarn build:prod && yarn install-on-device:prod",
    "build-and-install:dev": "yarn build:dev && yarn install-on-device:dev",
    "build:dev": "cd android && ./gradlew assembleDev && cd ../",
    "build:prod": "cd android && ./gradlew assembleProd && cd ../",
    "install-on-device:dev": "adb install -r ./android/app/build/outputs/apk/dev/release/app-dev-release.apk",
    "install-on-device:prod": "adb install -r ./android/app/build/outputs/apk/prod/release/app-prod-release.apk",
    "lint": "eslint ./app/**/*.js",
    "lint:fix": "yarn lint --fix",
    "run:android": "react-native run-android --variant=devDebug",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "i18n-js": "3.2.1",
    "jsc-android": "^236355.1.1",
    "popcorn-sdk": "^3.0.0",
    "prop-types": "15.7.2",
    "react": "16.8.3",
    "react-native": "0.58.6",
    "react-native-animatable": "1.3.1",
    "react-native-fs": "2.13.3",
    "react-native-gesture-handler": "1.1.0",
    "react-native-google-cast": "github:tripss/react-native-google-cast#8e71424503e5b86a443f0ff7ddbdfc4d72d3a754",
    "react-native-languages": "3.0.2",
    "react-native-linear-gradient": "^2.4.2",
    "react-native-markdown-renderer": "^3.2.8",
    "react-native-orientation": "^3.1.3",
    "react-native-splash-screen": "3.2.0",
    "react-native-static-server": "0.4.1",
    "react-native-torrent-streamer": "github:tripss/react-native-torrent-streamer",
    "react-native-typography": "^1.3.0",
    "react-native-vector-icons": "6.4.1",
    "react-native-video": "4.4.0",
    "react-navigation": "3.3.2",
    "react-redux": "6.0.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "update-react-native-app": "1.1.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-proposal-decorators": "7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.4",
    "@babel/plugin-transform-flow-strip-types": "7.3.4",
    "@babel/plugin-transform-runtime": "7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "3.2.0",
    "eslint": "5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.3.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "get-dev-paths": "^0.1.1",
    "jest": "24.5.0",
    "jest-react-native": "^18.0.0",
    "metro-react-native-babel-preset": "0.53.1",
    "react-test-renderer": "16.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
